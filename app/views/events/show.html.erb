<h1><%= @event.title %></h1>

<p>Host: <%= link_to @event.creator.email, "/users/#{@event.creator_id}" %></p>
<p>Location: <%= @event.location %></p>
<p>Date: <%= @event.date %></p>

<p><%= link_to "Register for this event", new_invitation_path(event_id: @event.id) %></p>
<hr>
<p>Attendees:</p>
<% @event.attendees.each do |attendee| %>
  <ul>
    <li><%= attendee.email %></li>
  </ul>
<% end %>
